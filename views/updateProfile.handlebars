
{{>left-sideBar}}
<div id="main" class="flex  colums-2 flex-col">
    <section id="section-1" class="flex  colums-3 flex-row justify-between">
        <div id="img-holder" class="flex justify-around"><a href="/update/profile/ico"><img id="img" class="mt-3" src="{{user.profile.img_src}}"></a></div>
        <div id="personal-data" class="flex colums-2 flex-col justify-between ">
                <p>
                    <label for="personal name">My name:</label>
                    <input class="personal-input" type="text" id="my-name" value="{{user.profile.profile_name}}"/>
                </p>
                <p>
                    <label for="age">My Age:</label>
                    <input class="personal-input" type="text" id="age" value="{{user.profile.age}}"/>
                </p>
                <p>
                    <label for="place">Favorite Place:</label>
                    <input class="personal-input flex" type="text" id="fav-plc" value="{{user.profile.fav_place}}"/>
                </p>
                
        </div>
        <div id="bio">
            <header>Brief BIO</header>
            <textarea id="bio-txt" name="bio"   rows="10" cols="80" >{{user.profile.bio}}</textarea>
        </div>
    </section>
    <section id="section-2" class="flex colums-2 flex-row justify-between">
        <div>
            <header>My Tips for travel</header>
            <textarea id="tips-text" name="tips" rows="12" cols="100" >{{user.profile.tips}}</textarea>
        </div>
        <div>
            <header>My funny travel story</header>
            <textarea id="story-text" name="story" rows="12" cols="100" >{{user.profile.story}}</textarea>
        </div>
    </section>
    <section class="flex justify-center">
    <butto id="updateProf-btn" class="{{user.profile.id}}">Update</butto>
    </section>

</div>

<script src="/js/updateProfile.js"></script>
