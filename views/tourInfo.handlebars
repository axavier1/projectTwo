
<div role="status" class="m-7 my-10 flex flex-col space-y-8  md:space-y-0 md:space-x-8 rtl:space-x-reverse md:flex md:items-center">
       
<div id="default-carousel" class="relative w-full" data-carousel="slide">
    <!-- Carousel wrapper -->
   {{#each tour.images as |image|}}{{>slideImg}}{{each}}
  
    <!-- Slider controls -->
    <button type="button" class=" btn-prev absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-slate-50  group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
            </svg>
            <span class="sr-only">Previous</span>
        </span>
    </button>
    <button type="button" class=" btn-next absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-slate-50 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <span class="sr-only">Next</span>
        </span>
    </button>
</div>

    {{!-- Tour text --}}
    <article class="w-full">
        <section class=" text-2xl w-fit p-3 bg-gray-800  text-white rounded-full mt-6 mb-4"><strong>{{tour.title}}</strong></section>
    
        <section class=" text-xl w-fit p-3 bg-gray-300 rounded-full mb-4">{{tour.description}}</section>
        <section class=" text-lg w-fit p-3   mb-4">{{tour.text}}</section>
        <section class=" text-lg w-fit p-3 bg-gray-300 rounded-full mb-4">
            Tour categories:
            {{#each tour.categories as |category|}}{{>badge}} {{/each}}
        </section>
        <section class="  w-fit px-1   bg-gray-300 rounded-full mb-4">
            <div class="flex items-center gap-4">
            <span>Created by: </span>
               <a href="/profile/{{user.profile.id}}"> <img class="w-11 h-11 rounded-full" src="{{user.img_src}}" alt="user icon"></a>
                <div class="font-medium dark:text-white">
                <div>{{user.user_name}}</div>
                <div class="text-sm text-gray-500 dark:text-gray-400">Joined in {{format_time user.createdAt}}</div>
                </div>
            </div>
        </section>
         <section class="flex flex-row text-lg w-fit p-3 bg-gray-300 rounded-full px-4 mb-4">
            Travel companions:
            {{#each tour.users as |members|}}{{>tourMembers}}{{/each}}
         </section>
        <section class=" text-lg w-fit p-3 bg-gray-300 rounded-full mb-4">
            Click to join tour:
            <button id="add-user" class="mx-3 relative inline-flex items-center justify-center w-10 h-10 overflow-hidden bg-lime-300 rounded-full">
                 <span class="font-medium text-white" >+</span>
            </button>
        </section>
    </article>
    {{!-- <span class="sr-only">Loading...</span> --}}
</div>

